Compiler('bash')
{
    .CompilerFamily = "custom"
    .Executable = '/usr/bin/bash'
}
.GoogleTestBasePath = "external/SDK/googletest/googletest/googletest"
.GoogleTestInlcudePaths = ' "-I$GoogleTestBasePath$/include"'
.GoogleTestSourcePaths = ' $GoogleTestBasePath$/src'

{
    .ProjectName = "GTest"
    .ProjectPath = '$GoogleTestBasePath$'

    .GoogleTestSharedOptions =  [
                                    .CompilerOptions    + ' /W4'
                                                        + ' -MT'
                                                        
                                ]

    .GoogleTestOptions_x64  =   [
                                    .GoogleTestCompilerOptions  =   ''
                                    .Environment                +   ' '
                                ]

    .GoogleTestOptions_LinuxBase    =   [
                                            .Environment        +   ' '
                                        ]
    
}

